<% layout('layouts/boilerplate') %>
<h1>Login</h1>
<form action="/login" method="POST" class="validated-form" novalidate>
  <div class="mb-3">
    <label class="form-label" for="username">Username</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="valid-feedback">Username found</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="password">password</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="valid-feedback">Password matches</div>
  </div>
  <button class="btn btn-success">Login</button>
</form>
<form action="/register" class="validated-form" novalidate>
  <div>
    Do not have an account?
    <span><button class="btn btn-light">Register</button></span>
  </div>
</form>
